<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Slider_act">

    <ViewFlipper
        android:id="@+id/slider"
        android:layout_width="400dp"
        android:layout_height="476dp"
        android:layout_marginBottom="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ViewFlipper>

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="253dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/IBIUsuario"
                    android:layout_width="200dp"
                    android:layout_height="131dp"
                    android:onClick="Cliente"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/perfil_men" />

                <ImageButton
                    android:id="@+id/IBBbdd"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/IBIUsuario"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/bd_men" />

                <TextView
                    android:id="@+id/TvUsuario"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="22dp"
                    android:text="Gestionar Usuarios"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/IBIUsuario"
                    app:layout_constraintEnd_toEndOf="@+id/IBIUsuario"
                    app:layout_constraintStart_toStartOf="@+id/IBIUsuario" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginRight="49dp"
                    android:layout_marginBottom="22dp"
                    android:text="Gestionar Insumos"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/IBBbdd"
                    app:layout_constraintEnd_toEndOf="@+id/IBBbdd"
                    app:layout_constraintStart_toStartOf="@+id/IBBbdd" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/IBMaps"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:onClick="Maps"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/IBInfo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/maps_men" />

                <ImageButton
                    android:id="@+id/IBInfo"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:onClick="Info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/IBMaps"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.375"
                    app:srcCompat="@drawable/info_men" />

                <TextView
                    android:id="@+id/TvMaps"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginRight="42dp"
                    android:layout_marginBottom="21dp"
                    android:text="Localización"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/IBMaps"
                    app:layout_constraintEnd_toEndOf="@+id/IBMaps"
                    app:layout_constraintStart_toStartOf="@+id/IBMaps" />

                <TextView
                    android:id="@+id/TvInfo"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="49dp"
                    android:layout_marginLeft="49dp"
                    android:layout_marginEnd="51dp"
                    android:layout_marginRight="51dp"
                    android:layout_marginBottom="22dp"
                    android:text="Información"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/IBInfo"
                    app:layout_constraintEnd_toEndOf="@+id/IBInfo"
                    app:layout_constraintStart_toStartOf="@+id/IBInfo" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>